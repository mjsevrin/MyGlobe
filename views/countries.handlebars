<br>
<div class="content">
    <div class="ui padded grid">
        <form class="ui form" action="/countries" method="POST">
            <div class="field">
                <label>Name</label>
                <input type="text" name="name" placeholder="Name">
            </div>
            <div class="field">
                <label>Continent</label>
                <div class="ui selection dropdown">
                    <input type="hidden" name="continent">
                    <i class="dropdown icon"></i>
                    <div class="default text">Continent</div>
                    <div class="menu">
                        <div class="item" data-value="AF">Africa</div>
                        <div class="item" data-value="AS">Asia</div>
                        <div class="item" data-value="EU">Europe</div>
                        <div class="item" data-value="NA">North America</div>
                        <div class="item" data-value="SA">South America</div>
                        <div class="item" data-value="OC">Oceania</div>
                    </div>
                </div>
            </div>
            <div class="field">
                <label>Financial Power Index</label>
                <input type="number" name="fpi" placeholder="FPI" min="0.01" max="2.00" step="0.01" value="1.00">
            </div>
            <button class="ui tiny button">Add Entity</button>
            <div class="ui error message"></div>
        </form>
    </div>

    <div class="ui divider"></div>

    <div class="ui horizontally padded grid">
        <div class="ten wide column">
            <h2 class="ui header">Current Countries:</h2>
        </div>

        <div class="eight wide column">
            <table class="ui basic compact table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Continent</th>
                        <th>FPI</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each countries}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{continent}}</td>
                        <td>{{FPI}}</td>
                        <td>
                            <button class="ui tiny red inverted button" onclick="deleteEntry('/countries/{{id}}')">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="ui divider"></div>
</div>

{{>footer}}

<script>
    $('.ui.dropdown')
        .dropdown();
    
    $('.ui.form')
        .form({
            fields: {
            name : ['empty', 'maxLength[255]'],
            continent : 'empty'
            }
        })
    ;
</script>